// This is the main configuration file for Basys project. Most options are optional.
// This file uses JSON5 format (an unofficial extension of JSON), see http://json5.org.
// You can add custom attributes and access them in the backend code using global `BASYS_CONFIG` variable.
{
  "backend": {
    // Optional entry for Express application (relative to src/ directory).
    // See https://github.com/basys/basys/blob/master/packages/basys/lib/templates/backend.js .
    "entry": "backend.js",
  },
  "web": {
    // Optional entry for Vue application (relative to src/ directory).
    // See https://github.com/basys/basys/blob/master/packages/basys/lib/templates/frontend.js .
    // entry: 'web.js',

    // These styles will be included into <head> element of all pages.
    // You can use:
    // 1) URLs to include external resources (e.g. 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css');
    // 2) Project files using a path relative to src/ directory (e.g. 'theme.css');
    // 3) Files from NPM modules using a path relative to project's node_modules directory (e.g. 'bootstrap/dist/css/bootstrap.min.css').
    // External styles will be loaded first, then project's style bundle.
    "styles": [
      "todomvc-app-css/index.css",
    ],

    // Path to favicon file relative to the project root
    "favicon": false,

    // See https://github.com/ai/browserslist#queries
    "browsers": ["> 1%", "last 2 versions"],
  },
  "dev": {},
  "test": {
    // Available options: 'chromium', 'chrome', 'chrome:headless', 'chrome-canary', 'ie',
    // 'edge', 'firefox', 'firefox:headless', 'opera', 'safari'
    "testBrowsers": ["chrome"],
  },
  "deployments": {
    "main": {},
  },
  "editor": null, // The code editor you use. Can be null/'atom'/'code'/'sublime'.
  "appBuilder": true,
}